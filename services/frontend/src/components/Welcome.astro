---
import Header from './welcome/Header.astro';
import HeroSection from './welcome/HeroSection.astro';
import FeaturesSection from './welcome/FeaturesSection.astro';
import QuickStartSection from './welcome/QuickStartSection.astro';
import HowItWorksSection from './welcome/HowItWorksSection.astro';
import ReadyToBuildSection from './welcome/ReadyToBuildSection.astro';
import StatusSection from './welcome/StatusSection.astro';
import Footer from './welcome/Footer.astro';
---

<div class="flex min-h-screen flex-col">
  <Header />
  <main class="flex-1">
    <div class="container mx-auto px-4 md:px-6">
      <HeroSection />
      <FeaturesSection />
      <QuickStartSection />
      <HowItWorksSection />
      <ReadyToBuildSection />
      <StatusSection />
    </div>
  </main>

  <!-- Footer already includes its own <div class="container â€¦">, so no changes needed there either -->
  <Footer />
</div>
